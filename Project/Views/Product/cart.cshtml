@model Project.Models.Cart
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Cart</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><img src="@item.ImageUrl" alt="" class="img-fluid" style="width: 100px;" /></td>
                                    <td>@item.ProductName</td>
                                    <td>$@item.Price</td>
                                    <td>
                                        <form method="post" asp-action="UpdateQuantity" asp-controller="Cart">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" />
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </form>
                                    </td>
                                    <td>$@item.Total</td>
                                    <td>
                                        <form method="post" asp-action="RemoveFromCart" asp-controller="Cart">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-danger">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="order-summary">
            <h3>Order Summary</h3>
            <p>Sub Total: $@Model.SubTotal</p>
            <p>Tax: $@Model.Tax</p>
            <h4>Grand Total: $@Model.GrandTotal</h4>
        </div>
        <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
</div>
<!-- End Cart -->
<script>
    $(document).on("change", ".quantity-box input", function () {
        const productId = $(this).data("product-id");
        const quantity = $(this).val();

        $.post('/Cart/UpdateQuantity', { productId, quantity }, function () {
            location.reload(); // Reload trang sau khi cập nhật
        });
    });
</script>