@model Project.Models.Cart
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Cart</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Shop</a></li>
                    <li class="breadcrumb-item active">Cart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><img src="@item.ImageUrl" alt="@item.ProductName" style="width: 100px;" /></td>
                                    <td>@item.ProductName</td>
                                    <td>$@item.Price</td>
                                    <td>
                                        <input type="number" class="quantity-input"
                                               data-product-id="@item.ProductId"
                                               value="@item.Quantity" min="1" />
                                    </td>
                                    <td id="total-price-@item.ProductId">$@item.Total</td>
                                    <td>
                                        <button class="btn btn-danger remove-from-cart" data-product-id="@item.ProductId">
                                            Remove
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-8 col-sm-12">
                <div class="col-lg-4 col-sm-12">
                    <div class="order-box">
                        <h3>Order summary</h3>
                        <p>Subtotal: <span id="cart-subtotal">$@Model.SubTotal</span></p>
                        <p>Tax: <span id="cart-tax">$@Model.Tax</span></p>
                        <p>Grand Total: <span id="cart-grandtotal">$@Model.GrandTotal</span></p>
                    </div>
                </div>
            </div>
        </div>
        <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
</div>
<!-- End Cart -->