@model List<Project.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name </td>
                <td>
                    @(product.OrderProducts?.FirstOrDefault()?.Price ?? 0)
                </td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>
