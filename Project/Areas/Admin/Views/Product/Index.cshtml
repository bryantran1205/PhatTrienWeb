@model List<Project.Models.Product>

<h1 class="text-center mt-3" style="color: #4CAF50;">Product List</h1>
<link href="~/css/admin.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<div class="text-right mb-3">
    <a class="btn btn-success" href="@Url.Action("Create", "Product", new { area = "Admin" })" style="background-color: #4CAF50; border-color: #4CAF50;">
        <i class="fa fa-plus"></i> Add New Product
    </a>
</div>

<table class="table table-striped table-hover" style="border: 1px solid #ddd;">
    <thead class="thead-dark" style="background-color: #333; color: white;">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@string.Format("{0:C}", product.Price)</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Product", new { id = product.Id, area = "Admin" })" style="background-color: #FFC107; border-color: #FFC107; color: black;">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <form asp-action="Delete" asp-controller="Product" asp-area="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm" style="background-color: #F44336; border-color: #F44336;">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
